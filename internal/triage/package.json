{
    "name": "@strata/triage",
    "version": "1.0.0",
    "description": "AI-powered development automation: issue triage, code review, testing, security scanning, and release management for Strata",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "triage": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./reporters/vitest": {
            "types": "./dist/reporters/vitest.d.ts",
            "import": "./dist/reporters/vitest.js"
        },
        "./reporters/playwright": {
            "types": "./dist/reporters/playwright.d.ts",
            "import": "./dist/reporters/playwright.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rimraf dist",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "triage",
        "ai",
        "automation",
        "ollama",
        "vercel-ai-sdk",
        "mcp",
        "playwright",
        "testing",
        "security",
        "codeql",
        "sarif",
        "github",
        "octokit",
        "cli",
        "sprint-planning",
        "release-management"
    ],
    "author": "Jon Bogaty <jon@jonbogaty.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jbcom/nodejs-strata.git",
        "directory": "internal/triage"
    },
    "homepage": "https://github.com/jbcom/nodejs-strata/tree/main/internal/triage#readme",
    "bugs": {
        "url": "https://github.com/jbcom/nodejs-strata/issues"
    },
    "dependencies": {
        "@ai-sdk/mcp": "^1.0.0-beta.37",
        "@playwright/mcp": "latest",
        "ai": "^5.0.0",
        "ai-sdk-ollama": "^3.0.0",
        "commander": "^14.0.2",
        "glob": "^13.0.0",
        "octokit": "^5.0.5",
        "ollama": "^0.6.3",
        "picocolors": "^1.1.1",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@types/node": "^25.0.2",
        "rimraf": "^6.1.2",
        "tsx": "^4.19.0",
        "typescript": "^5.3.0"
    }
}
