modules = ["python-3.12", "bash", "nodejs-24"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mesa", "xorg.xorgserver", "xorg.libX11", "xorg.libXext", "mesa-demos", "chromium"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Documentation Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Playwright MCP Server"

[[workflows.workflow]]
name = "Documentation Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/docs && pnpm dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Playwright MCP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx -y @executeautomation/playwright-mcp-server --port 8080"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
publicDir = "docs"

[userenv]

[userenv.development]
CHROMIUM_PATH = "/nix/store/qa9cnw4v5xkxyip6mb9kxqfq1z4x2dx1-chromium-138.0.7204.100/bin/chromium"
