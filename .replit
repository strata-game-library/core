modules = ["nodejs-20", "python-3.12", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Documentation Server"

[[workflows.workflow]]
name = "Documentation Server"
author = "agent"

[[workflows.workflow.tasks]]
